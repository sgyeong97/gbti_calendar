{
  "openapi": "3.0.3",
  "info": {
    "title": "GBTI Calendar API",
    "description": "GBTI 캘린더 시스템 API 문서",
    "version": "1.0.0",
    "contact": {
      "name": "API Support"
    }
  },
  "servers": [
    {
      "url": "http://localhost:3000",
      "description": "로컬 개발 서버"
    },
    {
      "url": "https://gbti-calendar.vercel.app/",
      "description": "프로덕션 서버"
    }
  ],
  "tags": [
    {
      "name": "Discord Activity",
      "description": "Discord 활동 데이터 관련 API"
    },
    {
      "name": "Events",
      "description": "이벤트 관리 API"
    },
    {
      "name": "Calendars",
      "description": "캘린더 관리 API"
    },
    {
      "name": "Members",
      "description": "멤버 관리 API"
    },
    {
      "name": "Authentication",
      "description": "인증 관련 API"
    }
  ],
  "paths": {
    "/api/discord-activity": {
      "get": {
        "tags": [
          "Discord Activity"
        ],
        "summary": "Discord 활동 데이터 조회",
        "description": "Discord 봇으로부터 활동 시간 데이터를 조회합니다. 관리자 전용 API입니다.",
        "security": [
          {
            "cookieAuth": []
          }
        ],
        "parameters": [
          {
            "name": "userId",
            "in": "query",
            "description": "특정 사용자 ID로 필터링",
            "required": false,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "startDate",
            "in": "query",
            "description": "시작 날짜 (YYYY-MM-DD 형식)",
            "required": false,
            "schema": {
              "type": "string",
              "format": "date"
            }
          },
          {
            "name": "endDate",
            "in": "query",
            "description": "종료 날짜 (YYYY-MM-DD 형식)",
            "required": false,
            "schema": {
              "type": "string",
              "format": "date"
            }
          },
          {
            "name": "groupBy",
            "in": "query",
            "description": "그룹화 기준 (day, user)",
            "required": false,
            "schema": {
              "type": "string",
              "enum": [
                "day",
                "user"
              ],
              "default": "day"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "성공",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "type": "object",
                      "description": "그룹화된 활동 데이터"
                    },
                    "count": {
                      "type": "number",
                      "description": "데이터 개수"
                    }
                  }
                }
              }
            }
          },
          "403": {
            "description": "권한 없음 (관리자만 접근 가능)"
          },
          "500": {
            "description": "서버 오류"
          },
          "502": {
            "description": "Discord 봇 API 연결 실패"
          },
          "503": {
            "description": "Discord 봇 API 연결 불가"
          },
          "504": {
            "description": "요청 타임아웃"
          }
        }
      }
    },
    "/api/discord-activity/meeting-counts": {
      "get": {
        "tags": [
          "Discord Activity"
        ],
        "summary": "만남 횟수 조회",
        "description": "특정 사용자의 누적 만남 횟수를 조회합니다. 관리자 전용 API입니다.",
        "security": [
          {
            "cookieAuth": []
          }
        ],
        "parameters": [
          {
            "name": "userId",
            "in": "query",
            "description": "사용자 ID",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "성공",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "otherUserId": {
                            "type": "string"
                          },
                          "otherUserName": {
                            "type": "string"
                          },
                          "count": {
                            "type": "number"
                          },
                          "lastMetAt": {
                            "type": "string",
                            "format": "date-time"
                          },
                          "updatedAt": {
                            "type": "string",
                            "format": "date-time"
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "userId 파라미터 누락"
          },
          "403": {
            "description": "권한 없음"
          },
          "500": {
            "description": "서버 오류"
          }
        }
      }
    },
    "/api/discord-activity/meeting-counts/weekly": {
      "get": {
        "tags": [
          "Discord Activity"
        ],
        "summary": "주별 만남 횟수 조회",
        "description": "특정 사용자의 주별 만남 횟수를 조회합니다. 관리자 전용 API입니다.",
        "security": [
          {
            "cookieAuth": []
          }
        ],
        "parameters": [
          {
            "name": "userId",
            "in": "query",
            "description": "사용자 ID",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "month",
            "in": "query",
            "description": "월 필터 (YYYY-MM 형식, 선택사항)",
            "required": false,
            "schema": {
              "type": "string",
              "pattern": "^\\d{4}-\\d{2}$"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "성공",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "weekKey": {
                            "type": "string"
                          },
                          "weekStart": {
                            "type": "string"
                          },
                          "month": {
                            "type": "string"
                          },
                          "otherUserId": {
                            "type": "string"
                          },
                          "otherUserName": {
                            "type": "string"
                          },
                          "count": {
                            "type": "number"
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "userId 파라미터 누락"
          },
          "403": {
            "description": "권한 없음"
          },
          "500": {
            "description": "서버 오류"
          }
        }
      }
    },
    "/api/discord-activity/delete-user": {
      "delete": {
        "tags": [
          "Discord Activity"
        ],
        "summary": "사용자 활동 기록 삭제",
        "description": "특정 사용자의 모든 활동 기록을 삭제합니다. 관리자 전용 API입니다.",
        "security": [
          {
            "cookieAuth": []
          }
        ],
        "parameters": [
          {
            "name": "userId",
            "in": "query",
            "description": "삭제할 사용자 ID",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "성공",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean"
                    },
                    "deleted": {
                      "type": "object",
                      "properties": {
                        "activityCount": {
                          "type": "number"
                        },
                        "meetingCount": {
                          "type": "number"
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "userId 파라미터 누락"
          },
          "403": {
            "description": "권한 없음"
          },
          "500": {
            "description": "서버 오류"
          }
        }
      }
    },
    "/api/discord-activity/delete-week": {
      "delete": {
        "tags": [
          "Discord Activity"
        ],
        "summary": "주별 기록 삭제",
        "description": "특정 주의 만남 횟수 및 활동 기록을 삭제합니다. 관리자 전용 API입니다.",
        "security": [
          {
            "cookieAuth": []
          }
        ],
        "parameters": [
          {
            "name": "weekKey",
            "in": "query",
            "description": "주 키 (예: 2025-12-1)",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "deleteActivities",
            "in": "query",
            "description": "활동 기록 삭제 여부",
            "required": false,
            "schema": {
              "type": "boolean",
              "default": true
            }
          },
          {
            "name": "deleteMeetingCounts",
            "in": "query",
            "description": "만남 횟수 삭제 여부",
            "required": false,
            "schema": {
              "type": "boolean",
              "default": true
            }
          }
        ],
        "responses": {
          "200": {
            "description": "성공",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean"
                    },
                    "deleted": {
                      "type": "object",
                      "properties": {
                        "activityCount": {
                          "type": "number"
                        },
                        "meetingCountWeekly": {
                          "type": "number"
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "weekKey 파라미터 누락"
          },
          "403": {
            "description": "권한 없음"
          },
          "500": {
            "description": "서버 오류"
          }
        }
      }
    },
    "/api/events": {
      "get": {
        "tags": [
          "Events"
        ],
        "summary": "이벤트 조회",
        "description": "캘린더 이벤트를 조회합니다. 반복 이벤트와 생일 이벤트를 포함합니다.",
        "parameters": [
          {
            "name": "calendarId",
            "in": "query",
            "description": "캘린더 ID로 필터링",
            "required": false,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "start",
            "in": "query",
            "description": "시작 날짜/시간 (ISO 8601 형식)",
            "required": false,
            "schema": {
              "type": "string",
              "format": "date-time"
            }
          },
          {
            "name": "end",
            "in": "query",
            "description": "종료 날짜/시간 (ISO 8601 형식)",
            "required": false,
            "schema": {
              "type": "string",
              "format": "date-time"
            }
          },
          {
            "name": "participantName",
            "in": "query",
            "description": "참가자 이름으로 필터링",
            "required": false,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "includeBirthdays",
            "in": "query",
            "description": "생일 이벤트 포함 여부",
            "required": false,
            "schema": {
              "type": "string",
              "enum": [
                "0",
                "1"
              ],
              "default": "0"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "성공",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "events": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/Event"
                      }
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "서버 오류"
          }
        }
      },
      "post": {
        "tags": [
          "Events"
        ],
        "summary": "이벤트 생성",
        "description": "새 이벤트를 생성합니다. 반복 이벤트도 생성할 수 있습니다.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "oneOf": [
                  {
                    "$ref": "#/components/schemas/EventCreateRequest"
                  },
                  {
                    "$ref": "#/components/schemas/RecurringEventCreateRequest"
                  }
                ]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "이벤트 생성 성공",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "event": {
                      "$ref": "#/components/schemas/Event"
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "서버 오류"
          }
        }
      }
    },
    "/api/calendars": {
      "get": {
        "tags": [
          "Calendars"
        ],
        "summary": "캘린더 목록 조회",
        "description": "모든 캘린더 목록을 조회합니다.",
        "responses": {
          "200": {
            "description": "성공",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "calendars": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/Calendar"
                      }
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "서버 오류"
          }
        }
      },
      "post": {
        "tags": [
          "Calendars"
        ],
        "summary": "캘린더 생성",
        "description": "새 캘린더를 생성합니다. 관리자 전용 API입니다.",
        "security": [
          {
            "cookieAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "name"
                ],
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "color": {
                    "type": "string",
                    "default": "#4f46e5"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "캘린더 생성 성공",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "calendar": {
                      "$ref": "#/components/schemas/Calendar"
                    }
                  }
                }
              }
            }
          },
          "403": {
            "description": "권한 없음"
          },
          "500": {
            "description": "서버 오류"
          }
        }
      },
      "put": {
        "tags": [
          "Calendars"
        ],
        "summary": "캘린더 수정",
        "description": "캘린더 정보를 수정합니다. 관리자 전용 API입니다.",
        "security": [
          {
            "cookieAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "id"
                ],
                "properties": {
                  "id": {
                    "type": "string"
                  },
                  "name": {
                    "type": "string"
                  },
                  "color": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "캘린더 수정 성공",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "calendar": {
                      "$ref": "#/components/schemas/Calendar"
                    }
                  }
                }
              }
            }
          },
          "403": {
            "description": "권한 없음"
          },
          "500": {
            "description": "서버 오류"
          }
        }
      }
    },
    "/api/members": {
      "get": {
        "tags": [
          "Members"
        ],
        "summary": "멤버 목록 조회",
        "description": "모든 멤버 목록을 조회합니다.",
        "responses": {
          "200": {
            "description": "성공",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Member"
                  }
                }
              }
            }
          },
          "500": {
            "description": "서버 오류"
          }
        }
      },
      "post": {
        "tags": [
          "Members"
        ],
        "summary": "멤버 생성",
        "description": "새 멤버를 생성합니다. 관리자 전용 API입니다.",
        "security": [
          {
            "cookieAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "name"
                ],
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "platforms": {
                    "type": "object",
                    "properties": {
                      "discord": {
                        "type": "boolean"
                      },
                      "notice": {
                        "type": "boolean"
                      },
                      "chat": {
                        "type": "boolean"
                      }
                    }
                  },
                  "status": {
                    "type": "string",
                    "enum": [
                      "active",
                      "inactive"
                    ],
                    "default": "active"
                  },
                  "discordLink": {
                    "type": "string"
                  },
                  "birthYear": {
                    "type": "number"
                  },
                  "birthMonth": {
                    "type": "number"
                  },
                  "birthDay": {
                    "type": "number"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "멤버 생성 성공",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Member"
                }
              }
            }
          },
          "400": {
            "description": "잘못된 요청"
          },
          "403": {
            "description": "권한 없음"
          },
          "500": {
            "description": "서버 오류"
          }
        }
      }
    },
    "/api/login": {
      "post": {
        "tags": [
          "Authentication"
        ],
        "summary": "로그인",
        "description": "비밀번호로 로그인하고 역할(role) 쿠키를 설정합니다.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "password"
                ],
                "properties": {
                  "password": {
                    "type": "string",
                    "format": "password"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "로그인 성공",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "ok": {
                      "type": "boolean"
                    },
                    "role": {
                      "type": "string",
                      "enum": [
                        "admin",
                        "user"
                      ]
                    }
                  }
                }
              }
            },
            "headers": {
              "Set-Cookie": {
                "description": "gbti_role 쿠키가 설정됩니다",
                "schema": {
                  "type": "string"
                }
              }
            }
          },
          "401": {
            "description": "잘못된 비밀번호"
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "cookieAuth": {
        "type": "apiKey",
        "in": "cookie",
        "name": "gbti_role",
        "description": "쿠키에 저장된 역할 (admin 또는 user)"
      }
    },
    "schemas": {
      "Event": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "calendarId": {
            "type": "string"
          },
          "title": {
            "type": "string"
          },
          "description": {
            "type": "string",
            "nullable": true
          },
          "startAt": {
            "type": "string",
            "format": "date-time"
          },
          "endAt": {
            "type": "string",
            "format": "date-time"
          },
          "allDay": {
            "type": "boolean"
          },
          "color": {
            "type": "string"
          },
          "participants": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "isRecurring": {
            "type": "boolean"
          }
        }
      },
      "EventCreateRequest": {
        "type": "object",
        "required": [
          "title",
          "startAt",
          "endAt"
        ],
        "properties": {
          "title": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
